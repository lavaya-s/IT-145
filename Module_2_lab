import java.util.Scanner;

public class Module_2_lab {
   
   /* Def Function to calculate the total cost per trip */
   public static double drivingCost(double milesPerGallon,double dollarsPerGallon,double milesDriven){
      //init variable for return statement
      double yourValue;
      yourValue = milesDriven * milesPerGallon / dollarsPerGallon;//calculate the cost
      return yourValue;
      //after calculation is done it returns the total cost of driving
   }
   
   public static void main(String[] args) {
      /* create scanner to take input from user */
      Scanner scnr = new Scanner(System.in);
      /*init variables for calculation*/
      double milesPerGallon = scnr.nextDouble();
      double dollarsPerGallon =scnr.nextDouble();
      double milesDriven =10;//set to 10 and increase later
      /*output the calculation with two decimal points
      then increment the miles driven to get the next output
      call the vdriving cost function to perform the calculation*/
      System.out.printf("%.2f ", drivingCost(milesDriven,milesPerGallon,dollarsPerGallon));
      milesDriven+=40;
      System.out.printf("%.2f ", drivingCost(milesDriven,milesPerGallon,dollarsPerGallon));
      milesDriven+=350;
      System.out.printf("%.2f%n", drivingCost(milesDriven,milesPerGallon,dollarsPerGallon));
      //add a newline instead of a space
   }
}
